generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Admin {
  id       String @id @default(uuid())
  username String @unique
  password String
}

model Class {
  id              String    @id @default(uuid())
  name            String    @unique
  homeroomTeacher String?
  students        Student[]
}

model Student {
  id                   String                @id @default(uuid())
  name                 String
  classId              String
  breakfastAttendances BreakfastAttendance[]
  dailyLogs            DailyMenuLog[]
  class                Class                 @relation(fields: [classId], references: [id], onDelete: Cascade)
}

model DailyMenuLog {
  id         String   @id @default(uuid())
  date       DateTime
  studentId  String
  nasi       Boolean  @default(false)
  lauk       Boolean  @default(false)
  sayur      Boolean  @default(false)
  buah       Boolean  @default(false)
  minum      Boolean  @default(false)
  keterangan String?
  student    Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([studentId, date])
}

model BreakfastEvent {
  id          String                @id @default(uuid())
  date        DateTime              @unique
  attendances BreakfastAttendance[]
}

model BreakfastAttendance {
  id               String         @id @default(uuid())
  breakfastEventId String
  studentId        String
  isPresent        Boolean        @default(false)
  student          Student        @relation(fields: [studentId], references: [id], onDelete: Cascade)
  breakfastEvent   BreakfastEvent @relation(fields: [breakfastEventId], references: [id], onDelete: Cascade)

  @@unique([breakfastEventId, studentId])
}
